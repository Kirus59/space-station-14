<tabs:MainTab xmlns="https://spacestation14.io"
              xmlns:tabs="clr-namespace:Content.Client.SS220.SpaceWars.Party.UI.Tabs"
              MinSize="550 200">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal" VerticalExpand="True">
            <PanelContainer Name="MembersPanel" Margin="5 5 5 5" MinSize="280 150">
                <BoxContainer Orientation="Vertical" VerticalExpand="True">
                    <ScrollContainer HScrollEnabled="False" VerticalExpand="True">
                        <BoxContainer Name="MembersContainer" Orientation="Vertical"/>
                    </ScrollContainer>
                    <RichTextLabel Name="MaxMembersLabel" Margin="5"/>
                </BoxContainer>
            </PanelContainer>
            <PanelContainer Name="ChatPanel" HorizontalExpand="True" Margin="5 5 5 5" MinSize="200 150">
                <ScrollContainer HScrollEnabled="False" VerticalExpand="True">
                    <BoxContainer Name="ChatBox" Orientation="Vertical"/>
                </ScrollContainer>
            </PanelContainer>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" Name="ButtonContainer" MinSize="20 20" Margin="5 0 0 0">
        </BoxContainer>
    </BoxContainer>
</tabs:MainTab>
