<DefaultWindow xmlns="https://spacestation14.io"
               MinSize="500 100">
    <BoxContainer Orientation="Vertical" MinSize="500 100">
        <Label Text="{Loc 'ui-InviteInPartyWindow-InfoLabel'}" HorizontalExpand="True" Align="Center" ClipText="True"/>
        <LineEdit Name="Input"/>
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" HorizontalExpand="True">
            <Button Name="InviteButton" Text="{Loc 'ui-InviteInPartyWindow-InviteButton'}"/>
            <Button Name="CancelButton" Text="{Loc 'ui-InviteInPartyWindow-CancelButton'}"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
