<DefaultWindow xmlns="https://spacestation14.io"
               Title="Окно приглашений"
               MinSize="600 300">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="5">
        <Label Name="InvitesCountLabel" HorizontalExpand="True"/>
        <PanelContainer Name="InvitesPanel" VerticalExpand="True">
            <ScrollContainer>
                <BoxContainer Name="InvitesContainer" Orientation="Vertical"/>
            </ScrollContainer>
        </PanelContainer>
        <LineEdit Name="InputLine"/>
        <BoxContainer Orientation="Horizontal">
            <Button Name="InviteButton" Text="{Loc 'ui-InviteInPartyWindow-InviteButton'}"/>
            <RichTextLabel Name="FailReasonLabel" HorizontalExpand="True" Margin="5 0"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
