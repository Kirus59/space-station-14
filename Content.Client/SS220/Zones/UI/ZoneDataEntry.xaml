<BoxContainer xmlns="https://spacestation14.io"
             xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
             Orientation="Vertical"
             HorizontalExpand="True"
             MinSize="60 20">
    <BoxContainer Name="Heading" Orientation="Horizontal" HorizontalExpand="True">
        <ContainerButton Name="CollapseButton">
            <TextureRect Name="CollapseButtonTexture"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2 0"/>
        </ContainerButton>
        <ContainerButton Name="ParentButton" HorizontalExpand="True">
            <PanelContainer Name="ParentBackgroundPanel" HorizontalExpand="True">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                    <Label Name="ParentIDLabel"/>
                    <customControls:VSeparator Margin="5 0"/>
                    <Label Name="ParentNameLabel"  HorizontalExpand="True"/>
                </BoxContainer>
            </PanelContainer>
        </ContainerButton>
    </BoxContainer>
    <BoxContainer Name="Collapsible" Orientation="Vertical" Margin="10 0 0 0" HorizontalExpand="True">
        <BoxContainer Name="ZonesContainer" Orientation="Vertical" HorizontalExpand="True">
        </BoxContainer>
    </BoxContainer>
</BoxContainer>
